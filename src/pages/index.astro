---
import Layout from '../layouts/Layout.astro';
const posts = await Astro.glob('../pages/post/*.mdx');
---

<Layout title="Welcome to Astro.">
  <main>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
