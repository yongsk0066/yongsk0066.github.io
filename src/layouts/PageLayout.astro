---
import Head from "@components/Nano/Head.astro";
import Header from "@components/Nano/Header.astro";
import Footer from "@components/Nano/Footer.astro";
import { SITE_TITLE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE_TITLE}`} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
